#include <iostream>
#include <cstdlib>

using namespace std;

struct sotr
{
	int numer = 0;
	float aclad = 0;
};
int main()
{
	system("chcp 1251>nul");
	sotr a[3];
	srand(2);
	for (int i = 0; i < 3; i++)
	{
		a[i].numer = i+1;
		a[i].aclad = rand() % 10 + 5;
		cout << "Номер: " << a[i].numer << " Оклад: " << a[i].aclad << endl;
	}
	system("pause>nul");
	return 0;
}
