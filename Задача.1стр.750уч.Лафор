#include <iostream>
#include <cstdlib>
#include <algorithm>

using namespace std;

int main()
{
	system("chcp 1251>nul");
	float mas[5];
	for (int i = 0; i < 5; i++)
	{
		cout << "Введите значение " << i + 1<<" - "; cin >> mas[i];
	}
	sort(mas, mas + 5);
	cout << endl << endl;
	for (int i = 0; i < 5; i++)
	{
		cout << "Введите значение " << i + 1 << " - " << mas[i]<<endl;
	}
	system("pause>nul");
	return 0;
}
