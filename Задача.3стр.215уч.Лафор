#include <iostream>
#include <cstdlib>

using namespace std;
void zero(int& a, int& b);
int main()
{
	system("chcp 1251>nul");
	srand(2);
	int a = rand() % 10 + 3;
	int b = rand() % 10 + 3;
	cout << "a " << a << " b " << b << endl;
	zero(a, b);
	cout << "a " << a << " b " << b << endl;
	system("pause>nul");
	return 0;
}
void zero(int& a, int& b)
{
	if (a < b)
		a = 0;
	else b = 0;
}
