#include <iostream>
#include <cstdlib>
#include <conio.h>

using namespace std;

int main()
{
	system("chcp 1251>nul");
	srand(2);
	char a;
	do {
		a = '0';
		cout << endl;
		int x=rand()%10+5;
		int sum = 1;
		cout << "Число введёное " << x << endl;
		for (int i = 1; i <= x; i++)
		{
			sum = sum * i;
		}
		cout << "Сумма  " << sum<<endl;
		cout << "Введите y чтобы продолжить  ";
	} while ((a=_getche()) == 'y');
	system("pause>nul");
	return 0;
}
